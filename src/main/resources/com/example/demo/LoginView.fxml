<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LoginController" spacing="20" alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 20px;">

    <Label text="Login to Shopping System"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding: 10px 0;"/>

    <TextField fx:id="usernameField"
               promptText="Username"
               style="-fx-pref-width: 250px; -fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 5px; -fx-background-color: #ffffff;"/>

    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   style="-fx-pref-width: 250px; -fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 5px; -fx-background-color: #ffffff;"/>

    <Button fx:id="loginButton"
            text="Login"
            onAction="#handleLogin"
            style="-fx-font-size: 16px; -fx-pref-width: 250px; -fx-background-color: #1C325B; -fx-text-fill: white; -fx-padding: 10px; -fx-border-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.5), 5, 0, 0, 2);"/>
</VBox>

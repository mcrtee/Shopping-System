<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LoginController" spacing="20" alignment="CENTER">
    <Label text="Login to Shopping System" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="usernameField" promptText="Username" />

    <PasswordField fx:id="passwordField" promptText="Password" />

    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" style="-fx-font-size: 14px;"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ProductController"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20px; -fx-spacing: 15px; -fx-alignment: center;">

    <Label layoutX="115.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 20px 0;" text="Welcome to Shopping System" />

    <!-- Product List -->
    <ListView fx:id="productListView" prefWidth="300" prefHeight="200" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-padding: 10px;"/>

    <!-- Action Buttons -->
    <Button fx:id="addButton" text="Add to Cart" onAction="#addToCart"
            style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-background-color: #003161; -fx-text-fill: white; -fx-padding: 10px; -fx-border-radius: 5px;"/>
    <Button fx:id="placeOrderButton" text="Place Order" onAction="#placeOrder"
            style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-background-color: #6A669D; -fx-text-fill: white; -fx-padding: 10px; -fx-border-radius: 5px;"/>

    <!-- Cart Details -->
    <Label fx:id="cartSizeLabel" text="Items in Cart: 0" style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>
    <Label fx:id="cartTotalLabel" text="Total Price: $0.00" style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>

</VBox>
